
NETWORK=mainnet # mainnet | testnet | devnet
PRIVACY_LEVEL=high # low | medium | high | maximum

# Blockchain RPC Endpoints
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_API_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
BASE_RPC_URL=https://mainnet.base.org
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# Zcash Configuration
ZCASH_RPC_URL=http://localhost:8232
ZCASH_RPC_USER=your_username
ZCASH_RPC_PASSWORD=your_password

# Mesh Network
MESH_BOOTSTRAP_PEERS=/ip4/104.131.131.82/tcp/4001/p2p/QmaCpDMGvV2BGHeYERUEnRQAwe3N8SzbUtfsmvsqQLuvuJ
MESH_ENABLE=true
MESH_PORT=4001

# NFC Configuration
NFC_ENABLE=false
NFC_TAG_TIMEOUT=30000

# API Keys
INFURA_API_KEY=your_infura_key
ETHERSCAN_API_KEY=your_etherscan_key
POLYGONSCAN_API_KEY=your_polygonscan_key

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/SafeMask
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_byte_hex_encryption_key

# Bridge Watcher
BRIDGE_CHECK_INTERVAL=30000
BRIDGE_CONFIRMATION_BLOCKS=12

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ENABLE_METRICS=true

# Logging
LOG_LEVEL=info # debug | info | warn | error
LOG_FILE=./logs/SafeMask.log

# Development
DEV_MODE=false
ENABLE_HOT_RELOAD=false
